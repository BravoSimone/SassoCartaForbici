<h1>Guarda tutti i match</h1>
<table class="table">
  <td>/</td>
  <td>Giocatore 1</td>
  <td>Giocatore 2</td>
  <td>Partite vinte G1</td>
  <td>Partite vinte G2</td>
  <td>Fine partita G1?</td>
  <td>Fine partita G2?</td>
  <% @matches.each do |match| %>
    <tr>
      <form action = "<%= play_multiplayer_path %>">
        <% if match.player_1.email == current_user.email%>
          <% email = match.player_2.email  %>
        <% else %>
          <% email = match.player_1.email  %>
        <%end%>
        <td><button name="match" value="<%= email %>" type="submit" class="btn btn-link", >Vai alla partita!!</button></td>
        <td><%= match.player_1.email unless match.player_1.nil? %></td>
        <td><%= match.player_2.email unless match.player_2.nil? %></td>
        <td><%= match.p1_win %></td>
        <td><%= match.p2_win %></td>
        <td><%= match.request_close %></td>
        <td><%= match.accept_close %></td>      
      </form>
    </tr>
  <% end %>
</table>